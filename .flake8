[flake8]
# Line length compatible with Black
max-line-length = 100

# Ignore whitespace before ':' (E203) and line break before binary operator (W503)
extend-ignore = E203, W503

# Files and directories to exclude from checks
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    docs/conf.py

# Allow unused imports in package __init__ files (for re-exports)
per-file-ignores =
    __init__.py: F401

# McCabe complexity threshold
max-complexity = 10

# Import-order settings (requires flake8-import-order)
application-import-names = a_visualization
import-order-style = google

# Select error codes (optional â€” adjust based on installed plugins)
select = C,E,F,W,B